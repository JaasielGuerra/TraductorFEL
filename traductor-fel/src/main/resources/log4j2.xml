<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="WARN" > <!-- El nivel de eventos internos de Log4j que deben registrarse en la consola-->
    <Appenders>
        <!-- Destino de salida -->
        <Console name="console" target="SYSTEM_OUT" follow="true">
            <PatternLayout pattern="%d{yyyy-MM-dd HH:mm:ss} %-5p %c{1}:%L - %m%n"
                           charset="UTF-8"/>
        </Console>
    </Appenders>
    <Loggers>
        <Root level="TRACE">
            <AppenderRef ref="console"/>
        </Root>
    </Loggers>
</Configuration>